<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/custom_background"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginRight="@dimen/def_margin"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/def_margin"
            android:padding="15dp"
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_add_picture" />

        <TextView
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_below="@+id/ivAvatar"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:id="@+id/tvName"
            android:text="Họ tên: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@+id/tvName"
            android:text="Giới tính: "
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@id/tvGender"
            android:text="Ngày sinh: "
            android:id="@+id/tvDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@id/tvDOB"
            android:text="Số điện thoại: "
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@id/tvPhone"
            android:text="Nhóm: "
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@id/tvGroupName"
            android:text="Lương (/ngày): "
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@+id/tvSalary"
            android:textColor="@color/textColor"
            android:id="@+id/tvAddress"
            android:text="Địa chỉ: "
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@+id/tvAddress"
            android:layout_marginLeft="@dimen/def_margin"
            android:textColor="@color/textColor"
            android:id="@+id/tvFirstDayWork"
            android:text="Bắt đầu làm: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/tvkn"
            android:text="Kinh nghiệm: "
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_below="@+id/tvFirstDayWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tvkn"
            android:layout_marginTop="@dimen/def_margin_text"
            android:layout_below="@+id/tvFirstDayWork"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor"
            android:id="@+id/tvExp"
            android:text="Experience: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvExp"
            android:layout_marginLeft="20dp"
            android:textColor="#f50303"
            android:id="@+id/tvPreviousMonthSalary"
            android:text="Lương tháng trước: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</RelativeLayout>